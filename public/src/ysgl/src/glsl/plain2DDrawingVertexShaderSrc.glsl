	#define LOWP
	#define MIDP
	#define HIGHP
#endif


uniform HIGHP  mat4 transform;

attribute LOWP vec2 vertex;
attribute MIDP vec2 texCoordIn;
attribute LOWP vec4 colorIn;
attribute MIDP float pointSizeIn;

varying LOWP  vec4 colorOut;
varying MIDP  vec2 texCoordOut;

